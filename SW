const CACHE_NAME = 'projob-ultra-cache-v2';
const IMAGE_CACHE = 'projob-images-permanent';

// Aapki 4 Main Images (Logo, Favicon, etc.)
const STATIC_IMAGES = [
  'https://your-image-url-1.png',
  'https://your-image-url-2.png',
  'https://your-image-url-3.png',
  'https://your-image-url-4.png'
];

// 1. Install & Cache Static Images (Long TTL)
self.addEventListener('install', (e) => {
  e.waitUntil(
    caches.open(IMAGE_CACHE).then((cache) => cache.addAll(STATIC_IMAGES))
  );
  self.skipWaiting();
});

// 2. Smart Fetch Strategy (Stale-While-Revalidate)
self.addEventListener('fetch', (event) => {
  if (event.request.method !== 'GET') return;

  event.respondWith(
    caches.match(event.request).then((cachedResponse) => {
      const fetchPromise = fetch(event.request).then((networkResponse) => {
        // Naya content milte hi cache update karo
        if (networkResponse.status === 200) {
          const responseClone = networkResponse.clone();
          caches.open(CACHE_NAME).then((cache) => cache.put(event.request, responseClone));
        }
        return networkResponse;
      });
      // Pehle cache dikhao (Fast), background mein network chalta rahega
      return cachedResponse || fetchPromise;
    })
  );
});
